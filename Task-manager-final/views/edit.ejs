<%- include("partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%=task.title%></div>
    <!-- using method override to use PUT request(html does not support PUT and DELETE request)  -->
    <!-- we call for post request but it gets overrides to PUT request -->
    <form action="/tasks/<%= task._id %>?_method=PUT" method="POST" class="ui form">
        <div class="field">
            <input type="text" name="task[title]" value="<%= task.title %>">
            <input type="text" name="task[priority]" value="<%= task.priority %>">
            <textarea name="task[description]" placeholder="describe your task here..." required cols="30" rows="10"><%=task.description%></textarea>
            <input class="ui green basic button" type="Submit">
            

        </div>
    
    </form>
</div>

<%- include("partials/footer") %>


